char s[5][50] ; 
int i, j;
int k; 
bool f; 
k = 0; 
for (i = 0; i < 5; i++) 
{
    f = true;
    for (j = 0; j < strlen(s[i]); j++)
        if ((s[i][j] == ' ') || (s[i][j] == ',') || (s[i][j] == '.'))
        {
            f = true; 
        }
        else
        {
            if (f)
            {
                
                if ((s[i][j] == 'a') || (s[i][j] == 'A'))
                    k++;
                f = false;
            }
        }
}
label1->Text = k.ToString();
